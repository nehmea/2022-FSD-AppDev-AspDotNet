@page "{id:int}"
@model MidtermAuction.Pages.EditModel

@{
    ViewData["Title"] = "New Bid";
}

<h1>@ViewData["Title"]</h1>

<h4>Auction</h4>
<hr />
<div class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Auction.SellerEmail)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Auction.SellerEmail)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Auction.ItemName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Auction.ItemName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Auction.ItemDescription)
    </dt>
    <dd class="col-sm-10">
        @Html.Raw(Model.Auction.ItemDescription)
    </dd>
    <dt class="col-sm-2">
        Last Bid Price
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Auction.LastPrice)
    </dd>
    <div class="col-md-4">
        @* <p class="fs-4"><b>Seller Email: </b> @Model.Auction.SellerEmail</p>
            <p class="fs-4"><b>Seller Email: </b> @Model.Auction.ItemName</p>
            <p class="fs-4"><b>Seller Email: </b> @Model.Auction.ItemDescription</p>
            <p class="fs-4"><b>Last Bid Price: </b> @Model.Auction.LastPrice</p> *@
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewBidPrice" class="control-label"></label>
                <input asp-for="NewBidPrice" class="form-control" value="@Model.Auction.LastPrice" />
                <span asp-validation-for="NewBidPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewBidderEmail" class="control-label"></label>
                <input asp-for="NewBidderEmail" class="form-control" />
                <span asp-validation-for="NewBidderEmail" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Bid" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
